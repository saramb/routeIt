<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.it.mahaalrasheed.route.MapWrapperLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="visible"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            >


            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:name="com.google.android.gms.maps.MapFragment"
                android:id="@+id/fragment"
                android:layout_weight="0.88" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="#f1eeee"
                android:weightSum="1">

                <Button
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:id="@+id/frombutton"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.32" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView"
                    android:background="@drawable/swap"
                    android:layout_marginTop="10dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:id="@+id/tobutton"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.74" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#f1eeee"
                android:weightSum="1"
                android:id="@+id/table"
                >

                <TextView
                    android:id="@+id/section_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="500dp"
                    android:layout_height="500dp"
                    android:id="@+id/imageView2"
                    android:layout_marginTop="10dp" />

            </TableRow>


            <android.support.v4.view.ViewPager
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:clickable="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_weight="0.09" />

        </LinearLayout>


    </com.it.mahaalrasheed.route.MapWrapperLayout>

</RelativeLayout>
